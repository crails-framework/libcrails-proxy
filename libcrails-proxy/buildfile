intf_libs = # Interface dependencies.
impl_libs = # Implementation dependencies.
import libs += libcrails%lib{crails}

lib{crails-attachment}: {hxx ixx txx cxx}{**} $impl_libs $intf_libs

hxx{export}@./: cxx.importable = false

cxx.poptions =+ "-I$out_root" "-I$src_root"

{hbmia obja}{*}: cxx.poptions += -DLIBCRAILS_STATIC_BUILD
{hbmis objs}{*}: cxx.poptions += -DLIBCRAILS_SHARED_BUILD

lib{crails-attachment}:
{
  cxx.export.poptions = "-I$out_root" "-I$src_root"
  cxx.export.libs = $intf_libs
}

liba{crails-attachment}: cxx.export.poptions += -DLIBCRAILS_STATIC
libs{crails-attachment}: cxx.export.poptions += -DLIBCRAILS_SHARED

if $version.pre_release
  lib{crails-attachment}: bin.lib.version = "-$version.project_id"
else
  lib{crails-attachment}: bin.lib.version = "-$version.major.$version.minor"

{hxx ixx txx}{*}:
{
  install         = include/crails/request_parsers
  install.subdirs = true
}
